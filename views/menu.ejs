<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>

  <h2>Mains</h2>
  <ul>
    <% menuItems.forEach(item => { %>
      <% if (item.category === "Mains") { %>
        <li>
          <strong><%= item.name %></strong> - $<%= item.price %> (Rating: <%= item.rating %>)<br>
          <span><%= item.details %></span>
        </li>
      <% } %>
    <% }); %>
  </ul>

  <h2>Desserts</h2>
  <ul>
    <% menuItems.forEach(item => { %>
      <% if (item.category === "Desserts") { %>
        <li>
          <strong><%= item.name %></strong> - $<%= item.price %> (Rating: <%= item.rating %>)<br>
          <span><%= item.details %></span>
        </li>
      <% } %>
    <% }); %>
  </ul>

  <h2>Sides</h2>
  <ul>
    <% menuItems.forEach(item => { %>
      <% if (item.category === "Sides") { %>
        <li>
          <strong><%= item.name %></strong> - $<%= item.price %> (Rating: <%= item.rating %>)<br>
          <span><%= item.details %></span>
        </li>
      <% } %>
    <% }); %>
  </ul>
</body>
</html>
